# Shortcuts for common commands
alias q='exit'               # Quick exit
alias c='clear'              # Clear screen
alias h='history'            # View command history
alias cs='clear; ls'         # Clear + list files
alias pd='pwd'               # Print working directory
alias lsa='ls -a'            # List all files (including hidden)
alias lsl='ls -l'            # Long list format

# Fedora-specific (replace 'xdg-open' with 'open' on other Linux distros)
alias o='xdg-open'           # Open files with default apps
# Change directory aliases
alias desktop='cd ~/Desktop' 
alias root='cd /' 
alias home='cd ~'
alias cd..='cd ..'           # Move up one directory
alias ..='cd ..'             # Move up one directory
alias ...='cd ../..'         # Move up two directories
alias ....='cd ../../..'     # Move up three directories
alias .....='cd ../../../..'
